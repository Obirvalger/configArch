<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/3.4/menu">
	<menu id="apps-term-menu" label="Системные">
		<item label="LXTerminal" icon="/usr/share/icons/hicolor/128x128/apps/lxterminal.png">
			<action name="Execute"><execute>lxterminal</execute></action>
		</item>
		<item label="Xfce Terminal" icon="/usr/share/icons/gnome/16x16/apps/utilities-terminal.png">
			<action name="Execute">
				<command>xfce4-terminal</command>
				<startupnotify>
					<enabled>yes</enabled>
				</startupnotify>
			</action>
		</item>
		<item label="XTerm" icon="/usr/share/pixmaps/xterm-color_48x48.xpm">
			<action name="Execute">
				<command>xterm</command>
			</action>
		</item>
		<item label="Анализатор использования дисков" icon="/usr/share/icons/hicolor/16x16/apps/baobab.png">
			<action name="Execute"><execute>baobab</execute></action>
		</item>
		<item label="Файловый менеджер PCManFM" icon="/usr/share/icons/gnome/16x16/apps/system-file-manager.png">
			<action name="Execute"><execute>pcmanfm </execute></action>
		</item>
	</menu>
	<menu id="apps-net-menu" label="Интернет">
		<item label="Firefox" icon="/usr/share/icons/hicolor/16x16/apps/firefox.png">
			<action name="Execute">
				<command>firefox</command>
				<startupnotify>
					<enabled>yes</enabled>
					<wmclass>Firefox</wmclass>
				</startupnotify>
			</action>
		</item>
		<item label="Chromium" icon="/usr/share/icons/hicolor/16x16/apps/chromium.png">
			<action name="Execute">
				<execute>chromium</execute>
			</action>
		</item>
		<item label="Midori" icon="/usr/share/icons/hicolor/16x16/apps/midori.png">
			<action name="Execute">
				<execute>midori</execute>
			</action>
		</item>
	</menu>
