			</action>
		</item>
		<item label="Steam" icon="/usr/share/icons/hicolor/16x16/apps/steam.png">
			<action name="Execute">
				<execute>steam</execute>
			</action>
		</item>
		<item label="AssaultCube" icon="/usr/share/pixmaps/assaultcube.png">
			<action name="Execute">
				<execute>assaultcube</execute>
			</action>
		</item>
		<item label="Neverball" icon="/usr/share/icons/hicolor/16x16/apps/neverball.png">
